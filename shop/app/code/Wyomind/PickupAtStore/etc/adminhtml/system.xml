<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <!-- master tab -->

        <tab id="wyomind" translate="label" sortOrder="1000000" class='wyomind-logo'>
            <label>Wyomind</label>
        </tab>

        <!-- module tab -->
        <section id="pickupatstore" translate="label" sortOrder="130" showInDefault="1" showInWebsite="0"
                 showInStore="0">
            <class>separator-top</class>
            <label>Pickup At Store</label>
            <tab>wyomind</tab>
            <resource>Wyomind_PickupAtStore::pickupatstore_config</resource>
            <!-- License -->

            <group id="license" translate="label" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>License</label>
                <field id="extension_version" translate="label" type="label" sortOrder="1" showInDefault="1"
                       showInWebsite="0" showInStore="0">
                    <label>Extension version</label>
                </field>
                <field id="activation_key" translate="label comment" type="label" sortOrder="110" showInDefault="1"
                       showInWebsite="0" showInStore="0">
                    <label>Activation key</label>
                    <frontend_model>Wyomind\Framework\Block\Adminhtml\System\Config\Form\Field\ActivationKey</frontend_model>
                </field>
                <field id="license_status" translate="label comment" type="label" sortOrder="110" showInDefault="1"
                       showInWebsite="0" showInStore="0">
                    <label>License Status</label>
                    <frontend_model>Wyomind\Framework\Block\Adminhtml\System\Config\Form\Field\LicenseStatus</frontend_model>
                </field>
            </group>

        </section>


        <section id="carriers" showInDefault="1" showInStore="1" showInWebsite="1" translate="label">
            <resource>Wyomind_PickupAtStore::pickupatstore_config</resource>
            <group id="pickupatstore" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="999"
                   translate="label">
                <label>Pickup At Store</label>
                <field id="active" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label"
                       type="select">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="logs" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="15" translate="label"
                       type="select">
                    <label>Enable logs?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20" translate="label"
                       type="text">
                    <label>Title</label>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
                <field id="handling_fee" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="30"
                       translate="label" type="text">
                    <label>Global handling fee</label>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                    <comment>Special points of sale handling fee can be configured in the point of sale configuration
                        page
                    </comment>
                </field>
                <field id="sort_order" showInDefault="1" showInStore="0" showInWebsite="1" sortOrder="40"
                       translate="label" type="text">
                    <label>Sort Order</label>
                    <depends>
                        <field id="active">99</field>
                    </depends>
                </field>

                <group id="backend" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="800" translate="label">
                    <label>Magento Backend Settings</label>
                    <field id="display_only_title" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="25" translate="label" type="select">
                        <label>Display only the title in the shipping description of the order page</label>
                        <depends>
                            <field id="active">1</field>
                        </depends>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                </group>

                <group id="emails" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="900"
                       translate="label">
                    <label>Emails Settings</label>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                    <field id="new_order" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10"
                           translate="label" type="select">
                        <label><![CDATA[Order confirmation email for the Pickup@Store method]]></label>
                        <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                        <depends>
                            <field id="active">1</field>
                        </depends>
                    </field>
                    <field id="new_order_guest" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10"
                           translate="label" type="select">
                        <label><![CDATA[Order confirmation email for the Pickup@Store method (Guest)]]></label>
                        <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                        <depends>
                            <field id="active">1</field>
                        </depends>
                    </field>
                    <field id="copy_to_pos" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="25" translate="label" type="select">
                        <label>Send a copy of the confirmation email to the point of sale selected for collecting the order?</label>
                        <depends>
                            <field id="active">1</field>
                        </depends>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                </group>
                <group id="preferred_store" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="800"
                       translate="label">
                    <label>Preferred Store</label>
                    <field id="ask_for_registration" showInDefault="1" showInStore="1" showInWebsite="1"
                           sortOrder="10" translate="label" type="select">
                        <label>Ask for a preferred sotre when registering a custom account?</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="edit_in_middle" showInDefault="1" showInStore="1" showInWebsite="1"
                           sortOrder="20" translate="label" type="select">
                        <label>Allow the customer to modify the preferred store in his dashboard?</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                </group>
                <group id="settings" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="999"
                       translate="label">
                    <label>Display Settings</label>
                    <depends>
                        <field id="active">1</field>
                    </depends>

                    <field id="store_pickup_activated_default" showInDefault="1" showInStore="1" showInWebsite="1"
                           sortOrder="10" translate="label" type="select">
                        <label>Store pickup activated by default?</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <depends>
                            <field id="active">1</field>
                        </depends>
                    </field>


                    <field id="estimate_global" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20"
                           translate="label" type="select">
                        <label>Display a unique store pickup shipping method in the cart estimation</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <depends>
                            <field id="active">1</field>
                        </depends>
                    </field>


                    <field id="display_choice_block" showInDefault="1" showInStore="1" showInWebsite="1"
                           sortOrder="25" translate="label" type="select">
                        <label>Display a "Collect in store your order" block as the first step of the checkout?</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <depends>
                            <field id="active">1</field>
                        </depends>
                    </field>

                    <field id="dropdown" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="30"
                           translate="label" type="select">
                        <label>Display the locations in a dropdown</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <depends>
                            <field id="active">1</field>
                        </depends>
                    </field>
                    <field id="display_description" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="40"
                           translate="label" type="select">
                        <label>Display the description of the locations</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <depends>
                            <field id="active">1</field>
                            <field id="dropdown">0</field>
                        </depends>
                    </field>
                    <field id="display_list" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="50"
                           translate="label" type="select">
                        <label>Display the stores list</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <depends>
                            <field id="dropdown">1</field>
                        </depends>
                    </field>

                    <field id="display_gmap" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="60"
                           translate="label" type="select">
                        <label>Display the Google Map</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <depends>
                            <field id="dropdown">1</field>
                        </depends>
                    </field>

                    <group id="date_settings" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="90"
                           translate="label">
                        <label>Date Settings</label>
                        <depends>
                            <field id="active">1</field>
                            <field id="dropdown">1</field>
                        </depends>
                        <field id="date" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="1"
                               translate="label" type="select">
                            <label>Allow the customer to choose the day to pickup the order</label>
                            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                            <depends>
                                <field id="active">1</field>
                                <field id="dropdown">1</field>
                            </depends>
                        </field>
                        <field id="schedule_ahead" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10"
                               translate="label" type="text">
                            <label>Allow pickup method ahead</label>
                            <comment>in days</comment>
                            <depends>
                                <field id="active">1</field>
                                <field id="dropdown">1</field>
                                <field id="date">1</field>
                            </depends>
                        </field>
                        <field id="date_format" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20"
