                               translate="label" type="text">
                            <label>Store pickup activation title</label>
                            <depends>
                                <field id="active">1</field>
                            </depends>
                            <tooltip><![CDATA[<div class="collect_in_store"></div>]]></tooltip>
                        </field>
                        <field id="shipping_address_title" showInDefault="1" showInStore="1" showInWebsite="1"
                               sortOrder="20" translate="label" type="text">
                            <label>Shipping address title</label>
                            <depends>
                                <field id="active">1</field>
                            </depends>
                            <tooltip><![CDATA[<div class="shipping_address"></div>]]></tooltip>
                        </field>
                        <field id="pickupatstore_title" showInDefault="1" showInStore="1" showInWebsite="1"
                               sortOrder="30" translate="label" type="text">
                            <label>Store choice title</label>
