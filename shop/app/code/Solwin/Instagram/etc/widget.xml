<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="instagramwidget" class="Solwin\Instagram\Block\Widget\Instagram">
        <label translate="true">Solwin Instagram widget</label>
        <description>Solwin Instagram widget</description>
        <parameters>
            <parameter name="title" xsi:type="text" visible="true" required="true" sort_order="10" >
                <label translate="true">Title</label>
            </parameter>
            <parameter name="numberimage" xsi:type="text" visible="true" required="true" sort_order="20" >
                <label translate="true">Number Of Image</label>
            </parameter>
            <parameter name="resolution" xsi:type="select" visible="true" sort_order="30" source_model="Solwin\Instagram\Model\Source\Resolution">
                <label translate="true">Select Resolution of Image</label>
            </parameter>
        </parameters>
    </widget> 
</widgets>